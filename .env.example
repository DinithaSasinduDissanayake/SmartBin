# SmartBin API Server Configuration
# Copy this file to .env and fill in your values

# ===============================
# Server Configuration
# ===============================
# Port for the API server to listen on
PORT=5000

# Node environment (development, production, test)
NODE_ENV=development

# ===============================
# Database Configuration
# ===============================
# MongoDB connection URI - required for the application to start
# Format: mongodb://username:password@hostname:port/database
MONGODB_URI=mongodb://localhost:27017/smartbin

# ===============================
# Authentication Configuration
# ===============================
# Secret key for JWT token signing - required for the application to start
# Generate a strong random string (min 32 characters recommended)
JWT_SECRET=replace_this_with_a_secure_random_string

# JWT token expiration time (e.g., 30d for 30 days, 2h for 2 hours)
JWT_EXPIRE=30d

# ===============================
# Rate Limiting Configuration
# ===============================
# Time window for rate limiting in milliseconds (default: 15 minutes)
RATE_LIMIT_WINDOW_MS=900000

# Maximum number of requests within the time window
RATE_LIMIT_MAX=100

# ===============================
# File Upload Configuration
# ===============================
# Directory for file uploads (relative to project root)
UPLOAD_DIR=uploads

# Maximum file size in bytes (default: 5MB)
MAX_FILE_SIZE=5242880

# Comma-separated list of allowed file types
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,doc,docx

# ===============================
# Email Configuration
# ===============================
# Email service provider (e.g., gmail, sendgrid)
EMAIL_SERVICE=gmail

# Email account username/address
EMAIL_USER=your_email@gmail.com

# Email account password or app-specific password
EMAIL_PASSWORD=your_email_password

# From address for sent emails
EMAIL_FROM=noreply@smartbin.com

# ===============================
# Payment Gateway Configuration
# ===============================
# API key for payment gateway
PAYMENT_GATEWAY_KEY=your_payment_gateway_key

# API secret for payment gateway
PAYMENT_GATEWAY_SECRET=your_payment_gateway_secret

# ===============================
# Geolocation API Configuration
# ===============================
# API key for geolocation service
GEO_API_KEY=your_geolocation_api_key
